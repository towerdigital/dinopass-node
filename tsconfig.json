{
    "compilerOptions": {
        "target": "es2015",
        "declaration": true,
        "stripInternal": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "__tests__"]
}
