{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "outDir": "dist/cjs",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": true
    },
    "files": ["./src/index.ts"],
    "compileOnSave": false,
    "buildOnSave": false,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    }
}
