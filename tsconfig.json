{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "./lib",
        "inlineSourceMap": true,
        "lib": ["es5", "es2015", "es2016.array.include", "esnext.asynciterable"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "__test__"]
}
