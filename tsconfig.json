{
    "compilerOptions": {
        "target": "es2015",
        "declaration": true,
        "stripInternal": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,

        "moduleResolution": "node",
        "baseUrl": ".",

        "sourceRoot": ".",
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "__test__"]
}
